
<filesystem>

    <!-- Define action in Actions/Readers/ -->
    <folder name="Actions">
        <folder name="Readers">
            <file name="eu-esa-opt-dataio-s2-ImportS2ZarrProduct.instance">
                <attr name="instanceCreate" methodvalue="org.openide.awt.Actions.alwaysEnabled"/>
                <attr name="delegate" methodvalue="org.esa.snap.rcp.actions.file.ImportProductAction.create"/>
                <attr name="displayName" stringvalue="S2 Zarr"/>
                <attr name="formatName" stringvalue="Sentinel-2 Zarr Multi-Res"/>
                <attr name="useAllFileFilter" boolvalue="true"/>
<!--                <attr name="helpId" stringvalue="import[Format]Product"/>-->
            </file>
        </folder>
    </folder>

    <!-- Place action into menu File/Import/Optical Sensors/[Format] -->
    <folder name="Menu">
        <folder name="File">
            <folder name="Import">
                <folder name="Optical Sensors">
                    <folder name="Optical Sensors">
                        <file name="eu-esa-opt-dataio-s2-ImportS2ZarrProduct.shadow">
                            <attr name="originalFile"
                                  stringvalue="Actions/Readers/eu-esa-opt-dataio-s2-ImportS2ZarrProduct.instance"/>
                        </file>
                    </folder>
                </folder>
            </folder>
        </folder>
    </folder>

</filesystem>